@model IEnumerable<DoAnCoSo.Models.HeDieuHanh>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh Sách Hệ Điều Hành</h2>

<p>

    <button class="btn-default" style="color:white">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Hệ Điều Hành
        </th>
        <th>Hành Động</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenHDH)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaHDH }, new { @style = "color:white;" })
                </button>
                <button class="btn btn-primary">
                    @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaHDH }, new { @style = "color:white;" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaHDH }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }

</table>
