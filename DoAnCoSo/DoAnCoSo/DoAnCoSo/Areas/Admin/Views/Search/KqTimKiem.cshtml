@model PagedList.IPagedList<DoAnCoSo.Models.SanPham>
@using PagedList.Mvc;
@{
    ViewBag.Title = "KQTimKiem";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<p>
    <button class="btn-default" style="color:white">@Html.ActionLink("Thêm mới", "Create")</button>
</p>
<table class="table table-bordered">
    <tr>

        <th>
            Tên sản phẩm
        </th>
        <th>
            Giá tiền
        </th>
        <th>
            Số lượng
        </th>
      
        <th>
            Ảnh bìa
        </th>

        <th>
            Tên hãng
        </th>
        <th>
            Hệ điều hành
        </th>
        <th>
            Loai Sản Phẩm
        </th>
        <th> Hành động</th>
    </tr>


    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenSP)
            </td>
            <td>
                @String.Format("{0:0,0}", item.GiaTien) VNĐ
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SoLuong)
            </td>
           
            <td>
                <img src="@item.AnhBia" width="50%" height="50%" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HangSanXuat.TenHang)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HeDieuHanh.TenHDH)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiSanPham.TenLoai)
            </td>
            <td>
                <button class="btn btn-success">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.MaSP }, new { @style = "color:white;" })
                </button>
                <button class="btn btn-primary">
                    @Html.ActionLink("Chi tiết", "Detail", new { id = item.MaSP }, new { @style = "color:white;" })
                </button>
                <button class="btn btn-danger">
                    @Html.ActionLink("Xóa", "Delete", new { id = item.MaSP }, new { @style = "color:white;" })
                </button>
            </td>
        </tr>
    }

</table>
<br />

    Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) / @Model.PageCount

    @Html.PagedListPager(Model, page => Url.Action("Index",
                    new { page }))

    <!-- Kết thúc -->
